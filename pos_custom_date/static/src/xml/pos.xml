<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-extend="ProductScreenWidget">
        <t t-jquery="div.centerpane" t-operation="append">
			<button name="btnOutDate" style="display:none !important">FECHA</button>
		</t>
	</t>

    <t t-name="OutDateInfoWidget">
        <div class='modal-dialog'>
            <div class='popup popup-paymentrefinfo'>
                <p class='title'>Seleccionar la fecha a forzar</p>
                <div class='paymentrefinfo-detail'>
                    <span class='label' style='color:black'>Fecha:</span>
                    <input class='detail' type="date" name='forced_date_ref' t-att-value='widget.options.forced_date_ref'></input>
                </div>
                <div class='footer'>
                    <div class='button confirm'>
                        Confirmar
                    </div>
                    <div class='button cancel'>
                        Cancelar
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>