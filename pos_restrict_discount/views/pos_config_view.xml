<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_pos_config_extra_form_discount" model="ir.ui.view">
		<field name="name">pos.config.discount.form.view</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@id='pos_base']" position="inside">
				<div class="col-xs-12 col-md-6 o_setting_box"
					 title="Restringir descuento">
					<div class="o_setting_left_pane">
						<field name="restrict_discount_control"/>
					</div>
					<div class="o_setting_right_pane">
						<label for="restrict_discount_control"/>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>