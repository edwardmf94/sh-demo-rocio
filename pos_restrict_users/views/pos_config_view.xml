<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_pos_config_extra_restrict" model="ir.ui.view">
		<field name="name">pos.config_restrict.form.view</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="pos_base.view_pos_config_base"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@id='pos_base']" position="inside">
				<div class="col-xs-12 col-md-6 o_setting_box"
						title="Forbid continuing a past session">
					<div class="o_setting_left_pane">
						<field name="restrict_old_session"/>
					</div>
					<div class="o_setting_right_pane">
						<label for="restrict_old_session" string="Forbid continuing a past session"/>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>